int n = READ;
int i;
int y = 0;
int m;
int x;

for ( i = 1; i < (n + 1) ; i = i + 1 ) do {

     x = READ;
     
     if (y == 0) then { m = x ; y = 1;} else { if (x < m) then {m = x;}}

     writes "apos ";
     write i;
     writes " iteracoes o minimo e ";
     write m;
     writes "\n";
     
     }

return m;
